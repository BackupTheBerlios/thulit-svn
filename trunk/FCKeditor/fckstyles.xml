<Styles>
	<Style name="Bold" element="strong" />
	<Style name="Italic" element="em" />
	<Style name="Code" element="span">
		<Attribute name="class" value="Code" />
	</Style>
	<Style name="font size: 50%" element="span">
		<Attribute name="style" value="font-size: 0.5em" />
	</Style>
	<Style name="font size: 60%" element="span">
		<Attribute name="style" value="font-size: 0.6em" />
	</Style>
	<Style name="font size: 70%" element="span">
		<Attribute name="style" value="font-size: 0.7em" />
	</Style>
	<Style name="font size: 80%" element="span">
		<Attribute name="style" value="font-size: 0.8em" />
	</Style>
	<Style name="font size: 90%" element="span">
		<Attribute name="style" value="font-size: 0.9em" />
	</Style>
	<Style name="font size: 100%" element="span">
		<Attribute name="style" value="font-size: 1em" />
	</Style>
	<Style name="font size: 110%" element="span">
		<Attribute name="style" value="font-size: 1.1em" />
	</Style>
	<Style name="font size: 120%" element="span">
		<Attribute name="style" value="font-size: 1.2em" />
	</Style>
	<Style name="font size: 150%" element="span">
		<Attribute name="style" value="font-size: 1.5em" />
	</Style>
	<Style name="font size: 180%" element="span">
		<Attribute name="style" value="font-size: 1.8em" />
	</Style>
	<Style name="font size: 200%" element="span">
		<Attribute name="style" value="font-size: 2em" />
	</Style>
	<Style name="Title H1" element="h1" />
	<Style name="Title H2" element="h2" />
	<Style name="Title H3" element="h3" />
	<Style name="Title H4" element="h4" />
	<Style name="Title H5" element="h5" />
	<Style name="Title H6" element="h6" />
	<Style name="Custom Ruler" element="hr">
		<Attribute name="size" value="1" />
		<Attribute name="color" value="#ff0000" />
	</Style>
</Styles>
